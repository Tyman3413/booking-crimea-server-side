{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "resources/i18n/**/*",
        "watchAssets": true,
        "outDir": "dist/"
      },
      {
        "include": "resources/templates/**/*",
        "watchAssets": true,
        "outDir": "dist/"
      }
    ]
  }
}
